// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model Supplier {
  id       Int       @id @default(autoincrement())
  name     String
  email    String?
  phone    String?
  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  quantity    Int      @default(0)
  unitPrice   Float
  categoryId  Int
  supplierId  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category  Category        @relation(fields: [categoryId], references: [id])
  supplier  Supplier        @relation(fields: [supplierId], references: [id])
  movements StockMovement[]
}

model StockMovement {
  id        Int          @id @default(autoincrement())
  productId Int
  type      MovementType
  quantity  Int
  date      DateTime     @default(now())
  note      String?

  product Product @relation(fields: [productId], references: [id])
}

enum MovementType {
  IN
  OUT
  ADJUSTMENT
}
